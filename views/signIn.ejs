<%- include('includes/templateStart') %>
<div class="signIn">
    <form action="/signIn" method="POST" class="default-form">
        <label for="loginInput">Login:</label>
        <input type="text" name="login" id="loginInput" class="default-input">
        <label for="passwordInput">Password:</label>
        <input type="password" name="password" id="passwordInput" class="default-input">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn">Sign in</button>
    </form>
    <a class="custom-link" href="/signUp">Create an account.</a>
</div>
<% if (errors.length > 0) {%>
    <% for (let error of errors) {%>
        <div class="popup error show"><%= error%></div>
    <% } %>
<% } %>
<%- include('includes/templateEnd') %>