                    <button type="submit"><span class="material-symbols-outlined">logout</span></button>
                </form>
            </li>
        <% } else { %>
            <li><a href="/signIn">Sign In</a></li>
            <li><a href="/signUp">Sign Up</a></li>
        <% } %>
    </ul>
