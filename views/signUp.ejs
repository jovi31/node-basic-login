<%- include('includes/templateStart') %>
<div class="signUp">
    <form action="/signUp" method="POST" class="default-form">
        <label for="nameInput">Name:</label>
        <input type="text" name="name" id="nameInput" class="default-input">
        <label for="emailInput">E-mail:</label>
        <input type="text" name="email" id="emailInput" class="default-input">
        <label for="loginInput">Login:</label>
        <input type="text" name="login" id="loginInput" class="default-input">
        <label for="passwordInput">Password:</label>
        <input type="password" name="password" id="passwordInput" class="default-input">
        <label for="confirmPasswordInput">Confirm password:</label>
        <input type="password" name="confirmPassword" id="confirmPasswordInput" class="default-input">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn">Sign up</button>
    </form>
    <a class="custom-link" href="/signIn">Sign in instead.</a>
</div>
<% if (errors.length > 0) {%>
    <% for (let error of errors) {%>
        <div><div class="popup error show"><%= error%></div></div>
    <% } %>
<% } %>
<%- include('includes/templateEnd') %>